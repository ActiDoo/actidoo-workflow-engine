    "version": "0.2.0",
    "configurations": [

        {
            "name": "App Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "python": "${workspaceFolder}/backend/.venv/bin/python",
            "console": "integratedTerminal",
            "args": [
                "actidoo_wfe.fastapi:app",
                "--reload",
                "--host", "0.0.0.0",
                "--no-proxy-headers",
                "--no-access-log"
            ],
            "cwd": "${workspaceFolder}/backend",
            "jinja": true,
            "justMyCode": false,
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        },
        {
            "name": "Reset Database",
            "type": "debugpy",
            "request": "launch",
            "module": "actidoo_wfe.cli",
            "python": "${workspaceFolder}/backend/.venv/bin/python",
            "console": "integratedTerminal",
            "args": [
                "reset-db"
            ],
            "cwd": "${workspaceFolder}/backend",
            "jinja": true,
            "justMyCode": false,
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        }
    ]
}
